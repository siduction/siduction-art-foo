#!/usr/bin/make -f

DH_VERBOSE=1

NAME= siduction-paintitblack
SIZES= 640x480 800x600 1024x600 1024x768 1152x864 1280x720 1280x800 1280x1024 \
       1366x768 1440x900 1440x1050 1600x1200 1680x1050 1920x1080 1920x1200

all: clean
	cp -a theme $(NAME)
	for i in $(SIZES); do \
	    ln -sf /usr/share/wallpapers/$(NAME)/contents/images/$${i}.png $(NAME)/$${i}.png; \
	done
clean:
	for i in $(SIZES); do \
	    $(RM) -r $(NAME); \
	done
